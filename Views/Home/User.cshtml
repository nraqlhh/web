@model IEnumerable<web.Models.TBUserInfo>

@{
    ViewBag.Title = "User Information";
}

<link href="~/Content/User.css" rel="stylesheet" />

<h2>User Information</h2>

<p>
    <a href="@Url.Action("Create", "User")" class="btn btn-primary">Add New User</a>
</p>

<table class="user-table" id="userTable">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.IdUs)</td>
                <td>@Html.DisplayFor(modelItem => item.UsernameUs)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    <a href="@Url.Action("Edit", "User", new { id = item.IdUs })" class="btn btn-info"><i class="fas fa-edit"></i> Edit</a>
                    <a href="@Url.Action("Details", "Home", new { id = item.IdUs })" class="btn btn-secondary"><i class="fas fa-info-circle"></i> Details</a>
                    <a href="@Url.Action("Delete", "Home", new { id = item.IdUs })" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts {
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#userTable').DataTable({
                "paging": true, // Enable pagination
                "lengthMenu": [[5, 10, 25, 50], [5, 10, 25, 50]], // Set custom page size options
                "searching": true, // Enable search bar
                "info": true, // Display info about total entries
                "language": { // Customize pagination text
                    "info": "Displaying _START_ - _END_ of _TOTAL_ Users",
                    "paginate": {
                        "previous": "<i class='fas fa-angle-left'></i>", // Previous icon
                        "next": "<i class='fas fa-angle-right'></i>" // Next icon
                    }
                }
            });
        });
    </script>}

    <style>
        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

            .user-table th,
            .user-table td {
                padding: 10px;
                border: 1px solid #ddd;
                text-align: center; /* Center align content */
            }

            .user-table thead th {
                background-color: #f2f2f2;
                font-weight: bold;
            }

            .user-table tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            .user-table a.btn {
                display: inline-block;
                padding: 5px 10px;
                margin: 5px;
                border-radius: 5px;
                text-decoration: none; /* Remove underline */
            }

        .dataTables_length {
            margin-bottom: 10px; /* Adjust the margin value as needed */
        }

        /* OR, if there's a space above the search bar: */
        .dataTables_filter {
            margin-top: 10px; /* Adjust the margin value as needed */
        }


    </style>
